append () {
  # First remove the directory
  local IFS=':'
  local NEWPATH
  for DIR in $PATH; do
     if [ "$DIR" != "$1" ]; then
       NEWPATH=${NEWPATH:+$NEWPATH:}$DIR
     fi
  done

  # Then append the directory
  export PATH=$NEWPATH:$1
}

prepend () {
  # First remove the directory
  local IFS=':'
  local NEWPATH
  for DIR in $PATH; do
     if [ "$DIR" != "$1" ]; then
       NEWPATH=${NEWPATH:+$NEWPATH:}$DIR
     fi
  done

  # Then append the directory
  export $PATH=$1:$NEWPATH
}

if [ -d "$HOME/bin" ] ; then
  append $HOME/bin
fi

export PATH="/usr/local/homebrew/bin;/opt/local/bin:/opt/local/sbin:"$PATH

export MANPATH="${MANPATH}:/opt/local/share/man" 
